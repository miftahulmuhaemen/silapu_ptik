<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/bg_logo"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:contentDescription="@string/logo"

        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fragment_vertical_margin"
        android:src="@drawable/base"

        app:layout_constraintEnd_toEndOf="@id/ti_email"
        app:layout_constraintStart_toStartOf="@id/ti_email"
        app:layout_constraintBottom_toTopOf="@id/ti_email"
         />

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:labelText="Surel"
        app:primaryColor="@color/EggYellow"
        app:hasClearButton="true"
        app:useDenseSpacing="true"

        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:lines="1"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/ti_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin_globally"

        app:endIcon="@drawable/ic_camera_alt_black_24dp"

        android:focusedByDefault="false"
        app:labelText="Kata Sandi"
        app:primaryColor="@color/EggYellow"
        app:hasClearButton="true"
        app:useDenseSpacing="true"

        app:layout_constraintEnd_toEndOf="@id/ti_email"
        app:layout_constraintStart_toStartOf="@id/ti_email"
        app:layout_constraintTop_toBottomOf="@id/ti_email">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/edt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            />

    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginRight="@dimen/small_margin_globally"
        app:layout_constraintStart_toStartOf="@id/ti_password"
        app:layout_constraintEnd_toStartOf="@id/dividerAtau"
        app:layout_constraintTop_toTopOf="@id/dividerAtau"
        app:layout_constraintBottom_toBottomOf="@id/dividerAtau"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/small_margin_globally"
        app:layout_constraintEnd_toEndOf="@id/ti_password"
        app:layout_constraintStart_toEndOf="@id/dividerAtau"
        app:layout_constraintTop_toTopOf="@id/dividerAtau"
        app:layout_constraintBottom_toBottomOf="@id/dividerAtau"
        />



    <TextView
        android:id="@+id/dividerAtau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atau"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/large_margin_globally"
        app:layout_constraintEnd_toEndOf="@id/ti_password"
        app:layout_constraintStart_toStartOf="@id/ti_password"
        app:layout_constraintTop_toBottomOf="@id/btn_login"/>


    <TextView
        android:id="@+id/forgetPassword"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin_globally"
        android:text="@string/lupa_katasandi"
        android:textStyle="italic"
        android:textColor="@color/colorSecondary"
        app:layout_constraintStart_toStartOf="@id/ti_password"
        app:layout_constraintEnd_toEndOf="@id/ti_password"
        app:layout_constraintTop_toBottomOf="@id/dividerAtau" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/edittext_height_natural"
        android:layout_marginTop="@dimen/medium_margin_globally"

        android:text="Masuk"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:textColor="@color/White"
        app:layout_constraintStart_toStartOf="@id/ti_password"
        app:layout_constraintEnd_toEndOf="@id/ti_email"
        app:layout_constraintTop_toBottomOf="@id/ti_password" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_daftar"
        />

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/daftar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ProgressBar
        android:progressTint="@color/colorAccent"
        android:secondaryProgressTint="@color/colorAccent"
        android:indeterminateTint="@color/colorAccent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_vertical_margin"
        app:layout_constraintBottom_toTopOf="@id/btn_daftar"
        app:layout_constraintEnd_toEndOf="@id/ti_password"
        app:layout_constraintStart_toStartOf="@id/ti_password"
        />



</android.support.constraint.ConstraintLayout>
