<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/medium_margin_globally"
    android:padding="@dimen/medium_margin_globally"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:labelText="Surel"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"
                app:helperText="Isikan dengan format yang benar."
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:lines="1"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:labelText="Nama/Nama Pengguna"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"
                app:helperText=""

                android:layout_marginTop="@dimen/medium_margin_globally"
                android:layout_below="@+id/ti_email"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>



            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/medium_margin_globally"

                app:labelText="Alamat"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"
                app:helperText="Isikan secara lengkap."
                android:layout_below="@+id/ti_nama"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:lines="5"
                    android:gravity="top"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_kotaLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginTop="@dimen/medium_margin_globally"

                app:labelText="Kota Lahir"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"

                android:layout_below="@+id/ti_alamat"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_kotaLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_tanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_marginTop="@dimen/medium_margin_globally"
                android:layout_below="@+id/ti_kotaLahir"

                app:endIcon="@drawable/ic_settings_black_24dp"
                app:labelText="Tanggal Lahir"
                app:primaryColor="@color/EggYellow"
                app:useDenseSpacing="true">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_tanggalLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/ti_jenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_natural"

                android:hint="Jenis Kelamin"
                app:ms_background_color="#e8e8e8"
                app:ms_text_color="@color/Black"
                android:layout_marginTop="@dimen/medium_margin_globally"
                android:layout_below="@+id/ti_tanggalLahir"
                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/ti_identity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height_natural"

                android:hint="@string/kartu_identitas"
                app:ms_background_color="#e8e8e8"
                app:ms_text_color="@color/Black"
                android:layout_marginTop="@dimen/medium_margin_globally"
                android:layout_below="@+id/ti_jenisKelamin"
                />


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_idt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/medium_margin_globally"

                app:labelText="Nomor Identitas"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"
                app:helperText="Pastikan Inputan Benar."

                android:layout_below="@+id/ti_identity">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_nomorIdentitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="number"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/ti_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/medium_margin_globally"

                app:labelText="Nomor Telepon"
                app:primaryColor="@color/EggYellow"
                app:hasClearButton="true"
                app:useDenseSpacing="true"
                app:minCharacters="10"

                android:layout_below="@+id/ti_idt">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/edt_numberPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="number"
                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>


        </RelativeLayout>

    </ScrollView>
